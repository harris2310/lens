{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "semanticCommits": "enabled",
  "dependencyDashboard": true,
  "rebaseWhen": "behind-base-branch",
  "ignoreDeps": ["styled-components", "react", "react-dom"],
  "schedule": ["before 3am on Monday"],
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    },
    {
      "matchPackagePatterns": ["@fontsource/*"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "Fonts",
      "groupSlug": "fonts"
    },
    {
      "matchPackagePatterns": [
        "@react-aria/*",
        "@react-stately/*",
        "@react-types/*"
      ],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "React-aria",
      "groupSlug": "react-aria"
    },
    {
      "matchPackagePatterns": ["@types/*"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "Types",
      "groupSlug": "types"
    },
    {
      "matchPackagePatterns": ["rollup-*"],
      "matchPackageNames": ["rollup"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "Rollup",
      "groupSlug": "rollup"
    },
    {
      "matchPackagePatterns": ["@storybook/*"],
      "matchPackageNames": ["chromatic", "storybook-dark-mode"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "Storybook",
      "groupSlug": "storybook"
    },
    {
      "matchPackageNames": ["typescript", "tslib"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "Typescript",
      "groupSlug": "typescript"
    }
  ]
}
